%h3= t('menu.examples')

= link_to t('menu.new_menu', :default => t("helpers.links.new")), new_menu_path, :class => 'btn btn-primary'


%table.table.table-striped
  %thead
    %tr
      %th= t('menu.name')
      %th= t('menu.persons')
      %th= t('menu.days')
  %tbody
    - @menus.each do |menu|
      %tr
        %td= link_to menu.name, menu_path(menu.id)
        %td= menu.users_qty
        %td= menu.menu_days.count