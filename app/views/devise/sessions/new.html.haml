%h2= t('helpers.links.sign_in')
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
  = f.input :email, :autofocus => true
  = f.input :password, :label => t('user.password')
  = f.input :remember_me, :label => t('user.remember_me'), :as => :boolean if devise_mapping.rememberable?
  = f.button :submit, t('helpers.links.sign_in'), :class => 'btn-primary'

= render "devise/shared/links"