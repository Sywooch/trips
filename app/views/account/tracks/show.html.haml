- model_class = Track
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @track.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @track.description
%p
  %strong= model_class.human_attribute_name(:track) + ':'
  %br
  = @track.track
%p
  %strong= model_class.human_attribute_name(:details_url) + ':'
  %br
  = @track.details_url

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), account_tracks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_account_track_path(@track), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), account_track_path(@track), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
