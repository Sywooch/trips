= simple_form_for [:account, @trip], :html => { :class => 'form-horizontal' } do |f|
  = f.input :track_id, :collection => Track.where("user_id = ?", current_user.id), :label => t('account.track.track')

  = f.input :dates_range

  = f.input :trip_details, input_html: {:rows => 10}
  .form-actions
    = f.button :submit, :class => 'btn-primary', :value => t('helpers.links.save')
    = link_to t("helpers.links.cancel"), account_trips_path, :class => 'btn'
