%div{id: 'entity_' + entity.id, class: "entity entity-" + entity.get('entity_type')}
  %i.glyphicon.glyphicon-remove
  %span.entity-name= entity.getName()
  :if entity.isProduct()
    %input{type: 'text', class: 'form-control weight transparent',\
           value: entity.get('weight') || 0, data-value: 'entity.weight|number'}